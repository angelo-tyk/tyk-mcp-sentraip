FROM golang:1.21-alpine AS builder

WORKDIR /app
COPY src/claude-mcp-client/ .
RUN go mod download
RUN CGO_ENABLED=0 GOOS=linux go build -o claude-mcp-client .

FROM alpine:3.18
RUN apk --no-cache add ca-certificates tzdata
WORKDIR /root/

COPY --from=builder /app/claude-mcp-client .
COPY --from=builder /app/config/ ./config/

EXPOSE 8080
CMD ["./claude-mcp-client"]
